}

// Check if the key exists in the store
func (k Keeper) <%= title(TypeName) %>Exists(ctx sdk.Context, key string) bool {
	store := ctx.KVStore(k.storeKey)
	return store.Has([]byte(types.<%= title(TypeName) %>Prefix + key))
}